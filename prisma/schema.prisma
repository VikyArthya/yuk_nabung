generator client {
  provider = "prisma-client-js"
}


datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

// Model for NextAuth
model Account {
  id                String  @id @default(cuid())
  userId            String
  type              String
  provider          String
  providerAccountId String
  refresh_token     String? @db.Text
  access_token      String? @db.Text
  expires_at        Int?
  token_type        String?
  scope             String?
  id_token          String? @db.Text
  session_state     String?

  user User @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@unique([provider, providerAccountId])
}

model Session {
  id           String   @id @default(cuid())
  sessionToken String   @unique
  userId       String
  expires      DateTime
  user         User     @relation(fields: [userId], references: [id], onDelete: Cascade)
}

model VerificationToken {
  identifier String
  token      String   @unique
  expires    DateTime

  @@unique([identifier, token])
}

// Users Table - Main user accounts
model User {
  id               String    @id @default(cuid())
  name             String?
  email            String    @unique
  password         String?   // For local authentication
  emailVerified    DateTime?
  image            String?
  dailyBudget      Decimal   @default(20000) @map("daily_budget") // Daily meal budget (default: 20k)
  savingsBalance   Decimal   @default(0) @map("savings_balance") // Automatic savings from leftovers
  manualSavings    Decimal   @default(0) @map("manual_savings") // Manual savings topups
  accounts         Account[]
  sessions         Session[]
  budgets          Budget[]
  wallets          Wallet[]
  expenses         Expense[]
  dailyRecords     DailyRecord[]
  weeklyRecords    WeeklyRecord[]
  createdAt        DateTime  @default(now()) @map("created_at")
  updatedAt        DateTime  @updatedAt @map("updated_at")
}

// Budgets Table - Monthly budget configuration
model Budget {
  id             String   @id @default(cuid())
  userId         String
  user           User     @relation(fields: [userId], references: [id], onDelete: Cascade)
  month          Int      // 1-12
  year           Int
  salary         Decimal  // Total salary income
  savingTarget   Decimal  @map("saving_target") // Target savings amount
  spendingTarget Decimal  @map("spending_target") // Target spending amount
  weeklyBudget   Decimal  @map("weekly_budget") // Weekly budget amount
  weeklyBudgets  WeeklyBudget[]
  allocations    Allocation[]
  createdAt      DateTime @default(now()) @map("created_at")

  @@unique([userId, month, year])
}

// Weekly Budgets Table - Weekly budget tracking
model WeeklyBudget {
  id             String @id @default(cuid())
  budgetId       String @map("budget_id")
  budget         Budget @relation(fields: [budgetId], references: [id], onDelete: Cascade)
  weekNumber     Int    @map("week_number") // Week number (1-4 or 5)
  plannedAmount  Decimal @map("planned_amount") // Planned amount for this week
  spentAmount    Decimal @default(0) @map("spent_amount") // Actual amount spent
  remainingAmount Decimal @map("remaining_amount") // Remaining amount
  movedToCold    Decimal @default(0) @map("moved_to_cold") // Amount moved to cold storage/savings
  transactions   Transaction[]
  transfers      Transfer[]
  createdAt      DateTime @default(now()) @map("created_at")

  @@unique([budgetId, weekNumber])
}

// Wallets Table - User's wallets/dompet
model Wallet {
  id        String   @id @default(cuid())
  userId    String   @map("user_id")
  user      User     @relation(fields: [userId], references: [id], onDelete: Cascade)
  name      String   // Wallet name (e.g., "Seabank", "Gopay", "Cash")
  type      WalletType // Wallet type (bank, ewallet, cash)
  balance   Decimal  @default(0) // Current balance
  transactions Transaction[] @relation("WalletTransactions")
  expenses  Expense[] // Expenses made from this wallet
  fromTransfers Transfer[] @relation("FromWallet")
  toTransfers   Transfer[] @relation("ToWallet")
  allocations   Allocation[]
  createdAt     DateTime @default(now()) @map("created_at")
}

// Transactions Table - All financial transactions
model Transaction {
  id        String          @id @default(cuid())
  weeklyId  String?         @map("weekly_id")
  weeklyBudget WeeklyBudget? @relation(fields: [weeklyId], references: [id], onDelete: SetNull)
  walletId  String          @map("wallet_id")
  wallet    Wallet          @relation("WalletTransactions", fields: [walletId], references: [id], onDelete: Cascade)
  type      TransactionType // income, expense, transfer
  amount    Decimal         // Transaction amount
  note      String?         // Transaction note/description
  date      DateTime        // Transaction date
  createdAt DateTime        @default(now()) @map("created_at")
}

// Transfers Table - Transfer between wallets
model Transfer {
  id          String         @id @default(cuid())
  fromWalletId String        @map("from_wallet_id")
  fromWallet  Wallet         @relation("FromWallet", fields: [fromWalletId], references: [id], onDelete: Cascade)
  toWalletId  String         @map("to_wallet_id")
  toWallet    Wallet         @relation("ToWallet", fields: [toWalletId], references: [id], onDelete: Cascade)
  weeklyId    String?        @map("weekly_id")
  weeklyBudget WeeklyBudget? @relation(fields: [weeklyId], references: [id], onDelete: SetNull)
  amount      Decimal        // Transfer amount
  createdAt   DateTime       @default(now()) @map("created_at")
}

// Allocations Table - Budget allocation to wallets
model Allocation {
  id        String   @id @default(cuid())
  budgetId  String   @map("budget_id")
  budget    Budget   @relation(fields: [budgetId], references: [id], onDelete: Cascade)
  walletId  String   @map("wallet_id")
  wallet    Wallet   @relation(fields: [walletId], references: [id], onDelete: Cascade)
  amount    Decimal  // Allocated amount
  createdAt DateTime @default(now()) @map("created_at")

  @@unique([budgetId, walletId])
}

// Expenses Table - Daily meal expenses tracking
model Expense {
  id      String   @id @default(cuid())
  userId  String   @map("user_id")
  user    User     @relation(fields: [userId], references: [id], onDelete: Cascade)
  walletId String? @map("wallet_id") // Wallet where expense was made
  wallet  Wallet?  @relation(fields: [walletId], references: [id], onDelete: SetNull)
  amount  Decimal  // Expense amount
  note    String?  // Optional note
  date    DateTime @default(now()) // Date of expense
  type    ExpenseType @default(MEAL) // Type of expense (always MEAL for meal tracking)
  createdAt DateTime @default(now()) @map("created_at")
}

// Daily Records Table - Daily budget tracking
model DailyRecord {
  id                   String   @id @default(cuid())
  userId               String   @map("user_id")
  user                 User     @relation(fields: [userId], references: [id], onDelete: Cascade)
  date                 DateTime @map("date") // Date (no time, just date)
  dailyBudget          Decimal  @map("daily_budget") // Daily budget amount
  dailyBudgetRemaining Decimal  @map("daily_budget_remaining") // Remaining daily budget
  totalExpense         Decimal  @default(0) @map("total_expense") // Total expenses for the day
  leftover             Decimal  @default(0) // Leftover for the day (if any)
  createdAt            DateTime @default(now()) @map("created_at")
  updatedAt            DateTime @updatedAt @map("updated_at")

  @@unique([userId, date])
}

// Weekly Records Table - Weekly summary and leftover tracking
model WeeklyRecord {
  id                     String   @id @default(cuid())
  userId                 String   @map("user_id")
  user                   User     @relation(fields: [userId], references: [id], onDelete: Cascade)
  weekStart              DateTime @map("week_start") // Start of week (Monday)
  weekEnd                DateTime @map("week_end") // End of week (Sunday)
  totalExpenses          Decimal  @default(0) @map("total_expenses") // Total expenses this week
  weeklyLeftover         Decimal  @default(0) @map("weekly_leftover") // Accumulated weekly leftover
  transferredToSavings   Boolean  @default(false) @map("transferred_to_savings") // Whether leftover is transferred to savings
  createdAt              DateTime @default(now()) @map("created_at")
  updatedAt              DateTime @updatedAt @map("updated_at")

  @@unique([userId, weekStart])
}

// Enums
enum WalletType {
  BANK    // Bank accounts (Seabank, BCA, etc.)
  EWALLET // Digital wallets (Gopay, OVO, Dana, etc.)
  CASH    // Physical cash
}

enum TransactionType {
  INCOME   // Income transactions (salary, etc.)
  EXPENSE  // Expense transactions
  TRANSFER // Transfer between wallets
}

enum ExpenseType {
  MEAL          // Daily meal expenses
  TOPUP_SAVINGS // Manual savings topup
}
